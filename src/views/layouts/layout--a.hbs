{{#extend "master"}}
  {{#content "master__head" mode="append"}}
    {{#block "head"}}{{/block}}
  {{/content}}
  {{#content "master__main"}}
    {{#or (content "region--a") (content "region--b") (content "region--c")}}
      <div class="layout layout--a">
        <div class="layout__inner row">
          {{#if (content "region--a")}}
            <div class="region region--a row__col--sm-24 row__col--md-24">
              {{#block "region--a"}}{{/block}}
            </div>
          {{/if}}
          {{#if (content "region--b")}}
            <div class="region region--b row__col--sm-24 row__col--md-18">
              {{#block "region--b"}}{{/block}}
            </div>
          {{/if}}
          {{#if (content "region--c")}}
            <div class="region region--c row__col--sm-24 row__col--md-6">
              {{#block "region--c"}}{{/block}}
            </div>
          {{/if}}
        </div>
      </div>
    {{/or}}
  {{/content}}
  {{#content "master__foot" mode="append"}}
    {{#block "foot"}}{{/block}}
  {{/content}}
{{/extend}}
